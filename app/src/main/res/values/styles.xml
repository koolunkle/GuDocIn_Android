<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Transparent statusBar -->
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">#FFFAFA</item>
    </style>

    <style name="MyCustomTheme" parent="MaterialSearchBarLight">
        <item name="mt_searchBarColor">@color/gray3</item>
        <item name="mt_searchIconTint">@color/black</item>
        <item name="mt_textCursorTint">@color/black</item>
        <item name="mt_placeholderColor">@color/black</item>
        <item name="mt_handlesTintEnabled">true</item>
    </style>

</resources>