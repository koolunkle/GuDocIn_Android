                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gray_border_box"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="배송 요청사항"
                                android:textColor="@color/black"
                                android:textSize="17sp" />

                        </LinearLayout>

                        <Spinner
                            android:id="@+id/shipmentOptionsSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:entries="@array/shipment_options" />

                        <com.neppplus.gudocin_android.utils.CustomEditText
                            android:id="@+id/edtShipmentOptions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="배송 요청사항 직접 입력"
                            android:visibility="gone" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/gray_border_box"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="결제수단"
                                android:textColor="@color/black"
                                android:textSize="17sp" />

                        </LinearLayout>

                        <RadioGroup
                            android:id="@+id/payMethodRadioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/radioCard"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="card"
                                android:text="신용카드" />

                            <RadioButton
                                android:id="@+id/radioVBank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:tag="vbank"
                                android:text="무통장 입금(가상계좌)" />

                            <RadioButton
                                android:id="@+id/radioBank"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:tag="trans"
                                android:text="실시간 계좌이체" />

                            <RadioButton
                                android:id="@+id/radioPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:tag="phone"
                                android:text="휴대폰 결제" />

                        </RadioGroup>

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text=" 상기 주문 내용을 확인하였으며 결제 진행에 동의합니다"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/btnPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/white"
                    android:text="상품 결제" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>