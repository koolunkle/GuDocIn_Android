<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/txtProductName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상품명"/>

    <TextView
        android:id="@+id/txtProductPrice"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12,000원"/>
    <TextView
        android:id="@+id/txtPurchaseDate"
        android:textSize="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2021.12.06:구매일자"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txtSavedMoneyPaymentCheck"
            android:layout_marginTop="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="적립금 지급내역 확인"/>

    </LinearLayout>



    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnReviewCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="리뷰 확인하기"/>
        <TextView
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            />


        <Button
            android:id="@+id/btnEditReview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="취소하기"/>


    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="300dp"
            android:layout_height="1dp"
            android:background="#808080"/>
    </LinearLayout>

</LinearLayout>