<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".EditMyInfoActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:text="회원정보 수정"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="내 아이디"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtMyEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="qkddnwls14@gmail.com" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#808080" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="이름 변경"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editMyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="변경할 이름을 입력하세요" />

        <Button
            android:id="@+id/btnMyInfoSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="회원정보 저장하기" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtEdtMyPassWord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="140dp"
                android:text="이메일 변경하기"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtIfEditEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="20dp"
                android:text="비밀번호 변경하기"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtEditPhoneNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="20dp"
                android:text="전화번호 변경하기"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</layout>